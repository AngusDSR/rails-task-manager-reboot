<h2 class="mb-3">View all tasks</h2>
<div class="w-75 p-2 border rounded border-1">
  <% @tasks.each do |task| %>
    <% task_html_tag = task.completed ? "s" : "div" %>
    <<%= task_html_tag %>>
    <%# add checkboxes %>
    <h5><%= link_to task.title, task_path(task), class: "text-decoration-none" %></h5>
    <p><%= task.details %></p>
    </<%= task_html_tag %>>
    <hr>
  <% end %>
</div>
